{
  "name": "HA DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "3.11"
    }
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python",
    "esbenp.prettier-vscode"
  ],
  "postCreateCommand": "pip install -e .",
  "remoteUser": "vscode"
}